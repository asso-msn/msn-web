{% extends "page.html.j2" %}

{% block styles %}
{% include "components/map_styles_includes.html.j2" %}
<style>
#map {
    height: 550px;
    max-width: 700px;
    width: 90%;
    margin: auto;
    z-index: 2;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
    border-radius: 4px;
}

#map .user-marker {
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.3);
}

#map-filter-form {
    display: flex;
    justify-content: center;
    margin-bottom: 1em;
}

@media screen and (max-width: 700px) {
    #map {
        width: 100%;
    }
}
</style>
{% endblock styles %}

{% block content %}


<h1>Carte des membres</h1>

<p>
    Une carte interactive des membres de la communaut√©.
    Si tu souhaites y figurer, <a href="{{ url_for('settings') }}">remplis la
    section "Ma position" de ton profil</a>.
</p>

<form method="get" id="map-filter-form">
    {{ form.hidden_tag() }}
    {% with input='game', label='Jeu' %}
    {% include "components/forms/select.html.j2" %}
    {% endwith %}
</form>

<div id="map"></div>

{% endblock content %}

{% block scripts %}
{% include "components/map_scripts_includes.html.j2" %}
<script>
    const users = {{ user_points | tojson }};
    const regions = '{{ url_for("static", filename="data/regions.topojson") }}';

    onLoad(() => {
        const items = [];

        for (const point of users) {
            const marker = L.marker(
                [point.latitude, point.longitude],
                {
                    icon: new UserIcon({iconUrl: point.icon,})
                }
            );
            marker.point = point;
            marker.bindPopup(
                `<a href="${point.link}">${point.name}</a><br>${point.map_point}`
            );
            items.push(marker);
        }

        const map = createMap(regions, items);

        const form = document.getElementById("map-filter-form");
        form.addEventListener("change", () => {
            const game = form.elements["game"].value;
            const url = new URL(window.location);
            if (game) {
                url.searchParams.set("game", game);
            } else {
                url.searchParams.delete("game");
            }
            window.location = url;
        });
    });
</script>
{% endblock scripts %}
